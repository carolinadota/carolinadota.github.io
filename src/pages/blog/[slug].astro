---
import Layout from '../../layouts/Layout.astro';

// Get all blog posts for static generation
export async function getStaticPaths() {
  const posts = await import.meta.glob('../../posts/*.md');
  
  const paths = await Promise.all(
    Object.entries(posts).map(async ([path, resolve]) => {
      const post = await resolve() as any;
      const title = post.frontmatter.title;
      const slug = title
        .toLowerCase()
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/^-+|-+$/g, '');
      
      return {
        params: { slug },
        props: { post }
      };
    })
  );
  
  return paths;
}

const { post } = Astro.props;
const { Content, frontmatter } = post;

// Format date
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}
---

<Layout title={`${frontmatter.title} - Carolina Dota`} description={frontmatter.description}>
  <article class="blog-post">
    <div class="post-header">
      <h1>{frontmatter.title}</h1>
      <p class="post-date">{formatDate(frontmatter.date)}</p>
    </div>
    
    <div class="post-content">
      <Content />
    </div>
    
    <div class="post-footer">
      <a href="/blog" class="back-link">‚Üê Back to all posts</a>
    </div>
  </article>
</Layout>

<style>
