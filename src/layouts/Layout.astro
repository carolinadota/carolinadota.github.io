---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Carolina Dota's personal website" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
  }
  
  body {
    margin: 0;
    padding: 0;
    background-color: #1a1a1a;
    color: #e0e0e0;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  header {
    margin-bottom: 3rem;
    border-bottom: 1px solid #333333;
    padding-bottom: 1rem;
    text-align: center;
  }
  
  nav {
    display: flex;
    gap: 2rem;
    justify-content: center;
  }
  
  nav a {
    color: #e0e0e0;
    text-decoration: none;
    font-weight: 400;
    transition: color 0.2s;
  }
  
  nav a:hover {
    color: #ffffff;
  }
  
  main {
    line-height: 1.7;
  }
  
  h1 {
    font-size: 2rem;
    font-weight: 400;
    margin: 0 0 2rem 0;
  }
  
  h2 {
    font-size: 1.2rem;
    font-weight: 400;
    margin: 2rem 0 1rem 0;
    color: #cccccc;
  }
  
  h3 {
    font-size: 1rem;
    font-weight: 400;
    margin: 1.5rem 0 0.5rem 0;
    color: #cccccc;
  }
  
  p {
    margin: 0 0 1rem 0;
    color: #e0e0e0;
  }
  
  ul {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }
  
  li {
    margin: 0.25rem 0;
    color: #e0e0e0;
  }
  
  a {
    color: #e0e0e0;
    text-decoration: underline;
  }
  
  a:hover {
    color: #ffffff;
  }
  
  @media (max-width: 768px) {
    body {
      padding: 1rem;
    }
    
    nav {
      gap: 1rem;
    }
  }
</style>
